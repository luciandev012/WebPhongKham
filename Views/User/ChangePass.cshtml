@using WebPhongKham.Models.Entity
@{
    Layout = null;
}
@model User
<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Page Title</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    
    <link rel='stylesheet' type='text/css' media='screen' href='~/lib/bootstrap/dist/css/bootstrap.min.css'>
    <link rel='stylesheet' type='text/css' media='screen' href='~/css/user.css'>
</head>
<body>
    <section class="h-100 gradient-form">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-xl-10">
                    <div class="card rounded-3 text-black">
                        <div class="row g-0">
                            <div class="col-lg-6">
                                <div class="card-body p-md-5 mx-md-4">

                                    <div class="text-center">
                                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp"
                                             style="width: 185px;" alt="logo">
                                        <h3 class="mt-1 mb-5 pb-1">Đổi mật khẩu</h3>
                                    </div>

                                    <form asp-controller="User" asp-action="ChangePass" id="loginForm" asp-route-id="@Model.Id" method="post">
                                        <p>Xin chào @Model.FullName</p>
                                        <h5>Vui lòng điền mật khẩu cũ</h5>
                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="form2Example22">Mật khẩu cũ</label>
                                            <input name="passwordOld" type="password" id="passwordOld" class="form-control" />
                                            
                                        </div>

                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="form2Example22">Mật khẩu mới</label>
                                            <input name="passwordNew" type="password" id="passwordNew" class="form-control" />
                                            
                                        </div>
                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="form2Example22">Xác nhận mật khẩu mới</label>
                                            <input name="passwordCf" type="password" id="passwordCf" class="form-control" />
                                            
                                        </div>
                                        <div class="text-center pt-1 mb-5 pb-1">
                                            <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit">
                                                Lưu mật khẩu
                                            </button>
                                        </div>
                                    </form>

                                </div>
                            </div>
                            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                                <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                    <img class="img-right" src="~/imgs/kham-benh.jpg" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script>
    $(document).ready(function() {
        $("#loginForm").validate({
            onfocusout: false,
            onkeyup: false,
            onclick: false,
            rules: {
                "passwordOld": {
                    required: true,
                    minlength: 4
                },
                "passwordNew": {
                    required: true,
                    minlength: 4
                },
                "passwordCf": {
                    required: true,
                    minlength: 4,
                    equalTo: "#passwordNew"
                }
            },
            messages: {
                "passwordOld": {
                    required: "Mật khẩu ít nhất 4 kí tự",
                    minlength: "Mật khẩu ít nhất 4 kí tự"
                },
                "passwordNew": {
                    required: "Mật khẩu ít nhất 4 kí tự",
                    minlength: "Mật khẩu ít nhất 4 kí tự"
                },
                "passwordCf": {
                    required: "Mật khẩu ít nhất 4 kí tự",
                    minlength: "Mật khẩu ít nhất 4 kí tự",
                    equalTo: "Mật khẩu không khớp"
                }
            },
        });
    });
</script>
</html>