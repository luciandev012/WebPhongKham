@using WebPhongKham.Models.Entity
@{
    ViewData["Title"] = "Health Type Page";
}
@model List<HealthType>


<article class="content dashboard-page">
    <section class="section">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
            Thêm loại sức khỏe
        </button>

        <!-- Modal -->
        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel">Thêm loại sức khỏe</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"><i class="fa-solid fa-xmark"></i></button>
                    </div>
                    <div class="modal-body">
                        <form asp-controller="HealthType" asp-action="Create" method="post">
                            <div class="row">
                                <div class="form-group mt-3">
                                    <label for="name" class="form-label">Loại sức khỏe</label>
                                    <input id="name" name="name" type="text" required class="form-control" />

                                </div>
                                <div class="form-group mt-3" style="padding-left: 2rem;">
                                    <input class="form-check-input" type="checkbox" value="1" id="deletable" name="deletable" />
                                    <label class="form-check-label" style="margin-left: 5px;" for="deletable">Dữ liệu này không thể xóa</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Thêm</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">Tên loại sức khỏe</th>
                    <th scope="col">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        @if (!item.Deletable)
                        {
                            <td class="fit">
                                <a asp-controller="HealthType" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                            </td>
                        }
                        else
                        {
                            <td></td>
                        }
                    </tr>
                }
            </tbody>
        </table>

        <div>
        </div>
    </section>

</article>