<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebPhongKham</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebPhongKham.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/app.css" />
    <link rel="stylesheet" href="~/css/fontawesome.min.css" />
    <link rel="stylesheet" href="~/css/toast.css" />
    <link rel="stylesheet" href="~/css/vendor.css" />
    <link rel="stylesheet" href="~/css/all.min.css" />
    <link rel="stylesheet" href="~/css/regular.min.css" />
    <link rel="stylesheet" href="~/css/solid.min.css" />
    <link rel="stylesheet" href="~/css/svg-with-js.min.css" />
</head>
<body>
    <div class="main-wrapper">
        <div class="app" id="app">
            <header class="header">
                <div class="header-block header-block-collapse d-lg-none d-xl-none">
                    <button class="collapse-btn" id="sidebar-collapse-btn">
                        <i class="fa fa-bars"></i>
                    </button>
                </div>
                <div class="header-block header-block-nav">
                    <ul class="nav-profile">
                        <li class="notifications new">

                            <div class="dropdown-menu notifications-dropdown-menu">
                                <ul class="notifications-container">
                                </ul>
                            </div>
                        </li>
                        <li class="profile dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button"
                               aria-haspopup="true" aria-expanded="false">
                                <span class="name">Xin chào Trần Thị Liên</span>
                            </a>
                            <div class="dropdown-menu profile-dropdown-menu" aria-labelledby="dropdownMenu1">
                                <a class="dropdown-item" href="https://www.lien.coderoom.info/dang-xuat">
                                    <i class="fa fa-power-off icon"></i> Đăng xuất
                                </a>
                            </div>
                        </li>
                    </ul>
                </div>
            </header>
            <!-- menu -->
            <aside class="sidebar">
                <div class="sidebar-container">
                    <div class="sidebar-header">
                        <div class="brand">
                            <div class="logo">
                                <span class="l l1"></span>
                                <span class="l l2"></span>
                                <span class="l l3"></span>
                                <span class="l l4"></span>
                                <span class="l l5"></span>
                            </div> khám sức khỏe
                        </div>
                    </div>
                    <nav class="menu">
                        <ul class="sidebar-menu metismenu" id="sidebar-menu">
                            <li>
                                <a asp-controller="HealthType">
                                    <i class="fa-solid fa-kit-medical"></i> Sức khỏe
                                </a>
                            </li>
                            <li class="active">
                                <a asp-controller="Home">
                                    <i class="fa-solid fa-user"></i> Tài Khoản
                                </a>
                            </li>

                            <li>
                                <a asp-controller="Examination">
                                    <i class="fas fa-sliders-h"></i> Quản lý
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>

            </aside>
            <div class="sidebar-overlay" id="sidebar-overlay"></div>
            <div class="sidebar-mobile-menu-handle" id="sidebar-mobile-menu-handle"></div>
            <div class="mobile-menu-handle"></div>
            @RenderBody()
        </div>
    </div>
</body>
<script src="https://kit.fontawesome.com/2a67ded97d.js" crossorigin="anonymous"></script>
<script src="~/js/vendor.js"></script>
<script src="~/js/app.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/toast.js"></script>
<script src="~/js/all.min.js"></script>
<script src="~/js/menu.js"></script>
<script src="~/js/common.js"></script>
<script src="~/js/fontawesome.min.js"></script>
<script src="~/js/solid.min.js"></script>
<script src="~/js/site.js"></script>

</html>
