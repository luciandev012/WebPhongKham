@using WebPhongKham.Models.Entity
@{
    ViewData["Title"] = "Home Page";
}
@model List<User>

<article class="content dashboard-page">
    <section class="section">
        <p class="text-center display-4">
            Đây là danh sách người dùng
        </p>
        <a asp-controller="Home" asp-action="Create" class="btn btn-primary">
            <i class="fa-solid fa-user-plus"></i>
            Thêm người dùng
        </a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">Tên người dùng</th>
                    <th scope="col">Tài khoản</th>
                    <th scope="col">Số điện thoại</th>
                    <th scope="col">Quyền tài khoản</th>
                    <th scope="col">Trạng thái tài khoản</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FullName</td>
                        <td>@item.UserName</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Role</td>
                        <td>@(item.Status ? "Active" : "Non active")</td>
                        <td class="fit">
                            <a asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">
                                <i class="fa-solid fa-pen-to-square"></i>
                                Sửa
                            </a>
                            @if (item.Status)
                            {
                                <a asp-controller="Home" asp-action="ChangeStatus" asp-route-id="@item.Id" class=" btn btn-danger">
                                    <i class="fa-solid fa-user-lock"></i>
                                    Khóa
                                </a>
                            }
                            else
                            {
                                <a asp-controller="Home" asp-action="ChangeStatus" asp-route-id="@item.Id" class=" btn btn-success">
                                    <i class="fa-solid fa-user-unlock"></i>
                                    Mo Khóa
                                </a>
                            }

                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div>
        </div>
    </section>

</article>